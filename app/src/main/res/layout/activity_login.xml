            <!--            android:layout_height="wrap_content"-->
            <!--            android:layout_margin="8dp"-->
            <!--            android:contentDescription="GORA ETA"-->
            <!--            android:text="GORA ETA"-->
            <!--            app:icon="@drawable/ic_mail"-->

            <!--            app:layout_anchorGravity="bottom|right|end"/>-->

            <com.google.android.material.button.MaterialButton
                android:id="@+id/emailbutton"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:text="Iniciar sesión con tu e-mail"
                android:textColor="#434343"
                app:backgroundTint="#F3F3F3"
                app:cornerRadius="25dp"
                app:icon="@drawable/ic_mail" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/telephopnebutton"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Iniciar sesión con el teléfono"
                android:textColor="#434343"
                app:backgroundTint="#F3F3F3"
                app:cornerRadius="25dp"
                app:icon="@drawable/ic_local_phone_black_24dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/facebookButton"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="65dp"
                android:text="Iniciar sesión con Facebook"
                android:textColor="#434343"
                app:backgroundTint="#F3F3F3"
                app:cornerRadius="25dp"
                app:icon="@drawable/ic_facebook" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
